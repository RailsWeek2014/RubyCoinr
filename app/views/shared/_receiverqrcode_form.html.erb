<div class="well">
    <%= bootstrap_form_for(@receiverqrcode, url:receiverqrcodes_path, html: { class: 'form-horizontal' }) do |f| %>
    <!-- label -->
    <%= f.text_field :label %>

    <!-- receiver address -->
    <%= f.select :receiver_addr, options_for_wallet_addr_select, {} %>

    <!-- amount -->
    <%= f.text_field :amount %>

    <!-- message -->
    <%= f.text_area :message %>

    <%= f.submit "Create QR code" %>
    <% end %><!-- end form_form -->
    <!-- fin -->
</div><!-- well fin -->