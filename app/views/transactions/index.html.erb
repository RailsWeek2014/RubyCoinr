<% content_for :page_title, 'Transactions' %>
<h2>Transactions</h2>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Receiver address</th>
      <th>Amount</th>
      <th>Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |tx| %>
      <tr>
        <td><%= tx.receiver_addr %></td>
        <td><%= tx.amount %></td>
        <td><%= tx.fee %></td>
        <td><%= link_to raw('Details <span class="glyphicon glyphicon-chevron-right"></span>'), tx, :class => "btn btn-default btn-sm" %></td>
        <td><%= time_ago_in_words tx.created_at %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path, :class => "btn btn-primary btn-lg" %>
