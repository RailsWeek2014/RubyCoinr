<% content_for :page_title, 'Wallet: ' + @wallet.label %>

<% if notice %>
<p id="notice" class="alert alert-success">
	<%= notice %>
</p>
<% end %>

<div class="well">
	<ul>
		<li>
			<strong>Label:</strong> <%= @wallet.label %>
		</li>
		<li>
			<strong>Addresse:</strong> <span class="btc-addr"><%= @wallet.curr_key.address %></span>
		</li>
		<li class="qrcode">
		<%= render inline: @wallet.curr_key.addr_qrcode_svg %>
		</li>
	</ul>
	<div class="centered row">
		<%= link_to raw('<span class="glyphicon glyphicon-download-alt"></span> Export Wallet'), wallet_export_path(@wallet), :class => 'btn btn-warning btn-large' %>
	</div>
</div>

<%= render partial: 'back_button' %>
<%= link_to 'Edit', edit_wallet_path(@wallet), :class => 'btn btn-default' %>